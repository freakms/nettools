{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "NetTools Suite",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "execute": true,
        "sidecar": true,
        "scope": [
          {
            "name": "ping",
            "cmd": "ping",
            "args": true
          },
          {
            "name": "tracert",
            "cmd": "tracert",
            "args": true
          },
          {
            "name": "nslookup",
            "cmd": "nslookup",
            "args": true
          },
          {
            "name": "arp",
            "cmd": "arp",
            "args": true
          },
          {
            "name": "netstat",
            "cmd": "netstat",
            "args": true
          },
          {
            "name": "ipconfig",
            "cmd": "ipconfig",
            "args": true
          },
          {
            "name": "iperf3",
            "cmd": "iperf3",
            "args": true
          }
        ]
      },
      "fs": {
        "all": false,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "removeDir": false,
        "removeFile": true,
        "renameFile": true,
        "scope": ["$APP/*", "$DOCUMENT/*", "$DOWNLOAD/*"]
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": true
      },
      "clipboard": {
        "all": true,
        "writeText": true,
        "readText": true
      },
      "notification": {
        "all": true
      },
      "os": {
        "all": true
      },
      "process": {
        "all": false,
        "exit": true,
        "relaunch": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setTitle": true,
        "setSize": true,
        "setMinSize": true,
        "setMaxSize": true,
        "setPosition": true,
        "setFullscreen": true,
        "setFocus": true,
        "setAlwaysOnTop": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "© 2024 frekms",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.frekms.nettools",
      "longDescription": "NetTools Professional Suite - Eine umfassende Sammlung von Netzwerk-Utilities für IT-Administratoren und Netzwerk-Profis.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Netzwerk-Utilities für Windows",
      "targets": ["msi", "nsis"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": null,
        "nsis": {
          "installerIcon": "icons/icon.ico",
          "headerImage": null,
          "sidebarImage": null,
          "license": null,
          "installMode": "currentUser",
          "languages": ["German", "English"],
          "displayLanguageSelector": true
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "NetTools Suite",
        "width": 1200,
        "minWidth": 1000,
        "minHeight": 700,
        "center": true,
        "decorations": true,
        "transparent": false,
        "theme": "Dark"
      }
    ]
  }
}
